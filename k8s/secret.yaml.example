apiVersion: v1
kind: Secret
metadata:
  name: viberater-secrets
  namespace: viberater
type: Opaque
stringData:
  # Database password
  DATABASE_PASSWORD: "CHANGE_ME_STRONG_PASSWORD"

  # JWT Secret (min 32 characters)
  JWT_SECRET: "CHANGE_ME_LONG_RANDOM_SECRET_MIN_32_CHARS"

  # AI API Keys (optional for Phase 1, required for Phase 2)
  CLAUDE_API_KEY: "sk-ant-your-key-here"
  OPENAI_API_KEY: "sk-your-key-here"

  # Ollama URL (if using local LLM)
  OLLAMA_BASE_URL: "http://ollama-service:11434"

---
# Note: In production, create secrets like this:
# kubectl create secret generic viberater-secrets \
#   --namespace=viberater \
#   --from-literal=DATABASE_PASSWORD='your-password' \
#   --from-literal=JWT_SECRET='your-jwt-secret' \
#   --from-literal=CLAUDE_API_KEY='your-claude-key'
#
# Then delete this file or don't commit it to git!
